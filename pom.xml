<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>uk.co.terminological</groupId>
	<artifactId>r-jsr223-maven-plugin-test</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>R JSR223 Maven Plugin</name>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
	</properties>

	<dependencies>
		<dependency>
			<!-- DEVELOPMENT -->
			<groupId>uk.co.terminological</groupId>
			<artifactId>r-jsr223-runtime</artifactId>
			<version>1.0-SNAPSHOT</version>
			<!-- DEPLOYMENT -->
			<!--<groupId>com.github.terminological</groupId>
			<artifactId>maven-r-jsr223-runtime</artifactId>
			<version>master-SNAPSHOT</version>-->
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.11</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<!-- Resolve runtime library on github -->
	<repositories>
		<repository>
		    <id>jitpack.io</id>
		    <url>https://jitpack.io</url>
		</repository>
	</repositories>

	<!-- Resolve plugin on github -->
	<!-- <pluginRepositories>
		<pluginRepository>
		    <id>jitpack.io</id>
		    <url>https://jitpack.io</url>
		</pluginRepository>
	</pluginRepositories>  -->
	<pluginRepositories>
		<pluginRepository>
			<id>redhat</id>
			<url>https://maven.repository.redhat.com/earlyaccess/all/</url>
		</pluginRepository>
	</pluginRepositories>
	
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>${maven.compiler.source}</source>
					<target>${maven.compiler.target}</target>
				</configuration>
			</plugin>
			<plugin>
				<!-- DEVELOPMENT -->
				<groupId>uk.co.terminological</groupId>
				<!-- DEPLOYMENT -->
				<!-- <groupId>com.github.terminological</groupId> -->
				<artifactId>r-jsr223-maven-plugin</artifactId>
				<version>1.0-SNAPSHOT</version>
				<configuration>
					<packageData>
						<title>A test library</title>
						<version>0.01</version>
						<packageName>testRapi</packageName>
						<license>MIT</license>
						<description>An optional long description of the package</description>
						<maintainerName>test forename</maintainerName>
						<maintainerFamilyName>optional surname</maintainerFamilyName>
						<maintainerEmail>test@example.com</maintainerEmail>
						<!-- <inputFiles>
							<inputFile></inputFile>
						</inputFiles>-->
					</packageData>
				</configuration>
				<executions>
					<execution>
						<id>generate-r-library</id>
						<goals>
							<goal>generate-r-library</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
